{
  "name": "pavers-theme",
  "scripts": {
    "build": "npx mix",
    "deploy": "yarn build && shopify-themekit deploy -d=src --ignored-file=config/settings_data.json",
    "start": "concurrently \"npx mix watch\" \"shopify-themekit -d=src watch\""
  },
  "devDependencies": {
    "@shopify/themekit": "^1.1.9",
    "concurrently": "^6.2.1",
    "laravel-mix": "^6.0.28",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.38.1",
    "sass-loader": "^12.1.0"
  }
}
